    // "noImplicitThis": true,                      /* Aumentar o erro em 'this' expressões com um implícito 'any' type. */
    // "alwaysStrict": true,                        /* Analise no modo estrito e emita "use estrito" para cada arquivo de origem. */
    /* Additional Checks */
    // "noUnusedLocals": true,                      /* Reportar erros em locais não utilizados. */
