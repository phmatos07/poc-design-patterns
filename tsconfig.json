    "src/index.ts"
  ],
  "include": [ /* Especifica um array de nomes de arquivos ou padrões a serem incluídos no programa. Esses nomes de arquivo são resolvidos em relação ao diretório que contém o arquivo tsconfig.json. */
    "src/*.ts"
  ]
}